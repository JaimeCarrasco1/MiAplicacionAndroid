<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondo"
    android:padding="16dp"
    android:gravity="center"
    tools:ignore="ExtraText">


    <TextView
        android:id="@+id/titulo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="20dp"
        android:text="Quality BarberShop"
        android:textColor="#FFFDFD"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/NombreUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-10dp"
        android:layout_marginBottom="5dp"
        android:text="Bienvenido [Nombre]"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/titulo3"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:text="Nuestros Servicios"
        android:textAlignment="center"
        android:textColor="#7B54C1"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="312dp"
        android:layout_height="141dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imagen1"
            android:layout_width="160dp"
            android:layout_height="130dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="Botón de Imagen 1"
            android:src="@drawable/corte" />

        <ImageView
            android:id="@+id/imagen5"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:contentDescription="Botón de Imagen 2"
            android:src="@drawable/cejas2" />




    </LinearLayout>

    <LinearLayout
        android:layout_width="312dp"
        android:layout_height="58dp"
        android:layout_marginTop="-10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/texto1"
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="Botón de Imagen 1"
            android:text="Corte de pelo"
            android:textAlignment="center"
            android:textColor="@color/design_default_color_background"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Texto2"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:contentDescription="Botón de Imagen 2"
            android:text="Delineado Cejas"
            android:src="@drawable/logo"
            android:textAlignment="center"
            android:textColor="@color/design_default_color_background"
            android:textSize="24sp"
            android:textStyle="bold"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="304dp"
        android:layout_height="141dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imagen4"
            android:layout_width="143dp"
            android:layout_height="130dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="16dp"
            android:background="#FDFCFC"
            android:contentDescription="Botón de Imagen 1"
            android:src="@drawable/barbilla" />

        <ImageView
            android:id="@+id/imagen3"
            android:layout_width="134dp"
            android:layout_height="130dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="16dp"
            android:background="#FFFFFF"
            android:contentDescription="Botón de Imagen 2"
            android:src="@drawable/tintura" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="312dp"
        android:layout_height="33dp"
        android:layout_marginTop="-10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/texto3"
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="Botón de Imagen 1"
            android:text="Barba"
            android:textAlignment="center"
            android:textColor="@color/design_default_color_background"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Texto4"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:contentDescription="Botón de Imagen 2"
            android:src="@drawable/logo"
            android:text="Tintura"
            android:textAlignment="center"
            android:textColor="@color/design_default_color_background"
            android:textSize="24sp"
            android:textStyle="bold" />


    </LinearLayout>

    <Button
        android:id="@+id/BtnUbicanos"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:onClick="AbrirMapa"
        android:text="Ubicanos GPS" />

    <Button
        android:id="@+id/botonAgendar"
        android:layout_width="181dp"
        android:layout_height="52dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:onClick="IrAgendar"
        android:text="Agendar >" />


</LinearLayout>


